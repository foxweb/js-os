MULTIPLY				; The following routine multiplies bc by de and places the result in de.
		PUSH	AF
		ld	hl,0
		sla	e		; Optimised 1st iteration
		rl	d
		jr	nc,$+4
		ld	h,b
		ld	l,c
		ld	a,15
loop
		add	hl,hl
		rl	e
		rl	d
		jr	nc,$+6
		add	hl,bc
		jr	nc,$+3
		inc	de
   		dec	a
		jr	nz,loop	
		EX	DE,HL			; DE is used to accumulate the result
		POP	AF
		RET

